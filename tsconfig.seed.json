{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "lib": ["esnext"],
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["prisma/**/*.ts"],
    "exclude": ["node_modules"]
  }